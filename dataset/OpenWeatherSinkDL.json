{
	"name": "OpenWeatherSinkDL",
	"properties": {
		"linkedServiceName": {
			"referenceName": "Storage",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"LocationName": {
				"type": "String"
			}
		},
		"folder": {
			"name": "Extract"
		},
		"annotations": [],
		"type": "Json",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@concat(dataset().LocationName,'_',utcnow('HH'),'.json')",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@{concat(\n    'extract/',\n    '/year=' ,utcnow('yyyy'),\n    '/month=' ,utcnow('MM'),\n    '/day=' ,utcnow('dd'),\n    '/hour=' ,utcnow('HH'))}",
					"type": "Expression"
				},
				"fileSystem": "zpsb"
			}
		},
		"schema": {}
	}
}
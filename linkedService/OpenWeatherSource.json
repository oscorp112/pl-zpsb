{
	"name": "OpenWeatherSource",
	"properties": {
		"annotations": [],
		"type": "RestService",
		"typeProperties": {
			"url": "https://api.openweathermap.org/data/2.5/weather?lat=@{parameters('LatitudeParameter')}&lon=@{parameters('LongitudeParameter')}&appid=@{parameters('APIKeyParameter')}",
			"enableServerCertificateValidation": true,
			"authenticationType": "Anonymous",
			"authHeaders": {
				"APIKey": {
					"type": "AzureKeyVaultSecret",
					"store": {
						"referenceName": "KV",
						"type": "LinkedServiceReference"
					},
					"secretName": "OpenWeatherAPIKey"
				}
			}
		}
	}
}
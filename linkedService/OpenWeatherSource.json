{
	"name": "OpenWeatherSource",
	"properties": {
		"parameters": {
			"LocationLatitude": {
				"type": "string"
			},
			"LocationLongitude": {
				"type": "string"
			},
			"APIKey": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "RestService",
		"typeProperties": {
			"url": "https://api.openweathermap.org/data/2.5/weather?lat=@{parameters('LocationLatitude')}&lon=@{parameters('LocationLongitude')}&appid=@{parameters('APIKey')}",
			"enableServerCertificateValidation": true,
			"authenticationType": "Anonymous",
			"authHeaders": {
				"APIKey": {
					"type": "AzureKeyVaultSecret",
					"store": {
						"referenceName": "KV",
						"type": "LinkedServiceReference"
					},
					"secretName": "OpenWeatherAPIKey"
				}
			}
		}
	}
}